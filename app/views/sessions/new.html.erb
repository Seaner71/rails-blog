<h1>Sign in</h1>

<%= form_tag(sessions_path) do %>
   <div class="form-group">
     <%= label_tag :username %>
     <%= text_field_tag :username %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= text_field_tag :password %>
 </div>
 <div class="form-group">
   <%= submit_tag "Sign in" %>
 </div>
<% end %>
